{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This template is intended to create the VPC and the subnets for it.",
    
    "Parameters" : {
        "VPNParameter" : {
          "Type" : "String",
          "Description" : "VPN Resource Identifyer from 1-vpn.json"
        }
      },

      "Mappings" : {
        "SubnetMap" : {
            "PublicSubnets" : {
                "PUBLIC1" : "172.16.0.0/19",
                "PUBLIC2" : "172.16.32.0/19"
            },
            "PrivateSubnets" : {
                "PRIVATE1" : "172.18.64.0/19",
                "PRIVATE2" : "172.18.96.0/19"
            }
        }
    },

    "Resources" : {

        "myInternetGateway" : {
            "Type" : "AWS::EC2::InternetGateway",
            "Properties" : {
              "Tags" : [ 
                  {"Key" : "Name", "Value" : "myInternetGateway"},
                  {"Key" : "Env", "Value" : "Prod"}
                ]
            }
         },

         "myInternetGatewayAttachment" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
               "VpcId" : { "Ref" : "VPNParameter" },
               "InternetGatewayId" : { "Ref" : "myInternetGateway" }
             }
         },

         "myPublicSubnet1" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
               "VpcId" : { "Ref" : "VPNParameter" },
               "CidrBlock" : {
                "Fn::FindInMap" : [
                    "SubnetMap",
                    "PublicSubnets",
                    "PUBLIC1"
                ]},
               "AvailabilityZone" : {
                "Fn::Select" : [ 
                  "0", 
                  { 
                    "Fn::GetAZs" : "" 
                  } 
                ]
              },
               "Tags" : [ 
                   { "Key" : "Name", "Value" : "myPublicSubnet1" } 
                ]
            }
         },

         "myPublicSubnet2" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
               "VpcId" : { "Ref" : "VPNParameter" },
               "CidrBlock" : {
                "Fn::FindInMap" : [
                    "SubnetMap",
                    "PublicSubnets",
                    "PUBLIC2"
                ]},
               "AvailabilityZone" : {
                "Fn::Select" : [ 
                  "1", 
                  { 
                    "Fn::GetAZs" : "" 
                  } 
                ]
              },
               "Tags" : [ 
                   { "Key" : "Name", "Value" : "myPublicSubnet2" } 
                ]
            }
         },

         "myPublicRouteTable" : {
            "Type" : "AWS::EC2::RouteTable",
            "Properties" : {
               "VpcId" : { "Ref" : "VPNParameter" },
               "Tags" : [ { "Key" : "Name", "Value" : "myPublicRouteTable" } ]
            }
         },

         "myRoute" : {
            "Type" : "AWS::EC2::Route",
            "DependsOn" : "myInternetGateway",
            "Properties" : {
               "RouteTableId" : { "Ref" : "myPublicRouteTable" },
               "DestinationCidrBlock" : "0.0.0.0/0",
               "GatewayId" : { "Ref" : "myInternetGateway" }
            }
         },

         "mySubnet1RouteTableAssociation" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
               "SubnetId" : { "Ref" : "myPublicSubnet1" },
               "RouteTableId" : { "Ref" : "myPublicRouteTable" }
            }
         },

         "mySubnet2RouteTableAssociation" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
               "SubnetId" : { "Ref" : "myPublicSubnet2" },
               "RouteTableId" : { "Ref" : "myPublicRouteTable" }
            }
         },

         "myPublicNetworkAcl" : {
            "Type" : "AWS::EC2::NetworkAcl",
            "Properties" : {
               "VpcId" : { "Ref" : "VPNParameter" },
               "Tags" : [ { "Key" : "Name", "Value" : "myPublicNetworkAcl" } ]
            }
         },

         "myNetworkAclEntry1" : {
            "Type" : "AWS::EC2::NetworkAclEntry",
            "Properties" : {
               "NetworkAclId" : { "Ref" : "myPublicNetworkAcl" },
               "RuleNumber" : "100",
               "Protocol" : "-1",
               "RuleAction" : "allow",
               "Egress" : "true",
               "CidrBlock" : "0.0.0.0/0"
            }
         },

         "myNetworkAclEntry2" : {
            "Type" : "AWS::EC2::NetworkAclEntry",
            "Properties" : {
               "NetworkAclId" : { "Ref" : "myPublicNetworkAcl" },
               "RuleNumber" : "100",
               "Protocol" : "-1",
               "RuleAction" : "allow",
               "Egress" : "false",
               "CidrBlock" : "0.0.0.0/0"
            }
         },

         "mySubnetNetworkAclAssociation1" : {
            "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties" : {
               "SubnetId" : { "Ref" : "myPublicSubnet1" },
               "NetworkAclId" : { "Ref" : "myPublicNetworkAcl" }
            }
         },

         "mySubnetNetworkAclAssociation2" : {
            "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
            "Properties" : {
               "SubnetId" : { "Ref" : "myPublicSubnet2" },
               "NetworkAclId" : { "Ref" : "myPublicNetworkAcl" }
            }
         }

    }

}